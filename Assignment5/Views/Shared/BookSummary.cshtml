@model Books
<!--Partial view to disply book information-->

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small><p>$@Model.Price</p></small>
            </span>
        </h4>

        <h5>@Model.AuthorFirstName @Model.AuthorLastName</h5>
        <p>@Model.Publisher</p>
        <p>@Model.ISBN</p>
        <p>@Model.Classification</p>
        <p>@Model.Category</p>
        <p>@Model.Pages</p>

    </div>

    <!--Add to cart-->
    <form id="@Model.BookId" asp-page="/Purchase" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>

</div>